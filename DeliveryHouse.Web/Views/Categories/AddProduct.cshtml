@model DeliveryHouse.Web.Models.ProductViewModel

@{
    ViewData["Title"] = "Add Product";
}

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" />

<h2>Add</h2>
<h4>Product</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="AddProduct" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="IdCategory" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PriceString" class="control-label"></label>
                <input asp-for="PriceString" class="form-control" />
                <span asp-validation-for="PriceString" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="custom-checkbox">
                    <label>
                        <input asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="custom-checkbox">
                    <label>
                        <input asp-for="IsStarred" /> @Html.DisplayNameFor(model => model.IsStarred)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="ImageFile" class="control-label"></label>
                <input asp-for="ImageFile" type="file" class="form-control" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>
            <div>
                <button type="submit" value="Save" class="btn btn-success"><i class="glyphicon glyphicon-floppy-disk"></i> Save</button>
                <a asp-action="Details" asp-route-id="@Model.IdCategory" class="btn btn-secondary"><i class="glyphicon glyphicon-fast-backward"></i> Back </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
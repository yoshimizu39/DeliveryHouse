@model DeliveryHouse.Web.Models.CategoryViewModel

@{
    ViewData["Title"] = "Add Category";
}

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" />

<h2>Add</h2>

<h4>Category</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="AddCategory" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="IdStore" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageFile" class="control-label"></label>
                <input asp-for="ImageFile" type="file" class="form-control" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" value="Save" class="btn btn-success"><i class="glyphicon glyphicon-floppy-disk"></i> Save</button>
                <a asp-action="Details" asp-route-id="@Model.IdStore" class="btn btn-secondary"><i class="glyphicon glyphicon-fast-backward"></i> Back</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}